<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Nama Game</th>
            <th>Item</th>
            <th>Total Harga</th>
            <th>Status</th>
            <th>Nama Player</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0;i < transaksis.length;i++){ %>
        <tr>
            <td><%= i+1 %></td>
            <td>
                <ul class="list-inline mb-3">
                    <li class="list-inline-item">
                        <img src="http://localhost:3000/uploads/<%= transaksis[i].historyVoucherTopup.thumbnail %>" alt="thumbnail" width="48%" height="48%">
                    </li>
                </ul>
                <%= transaksis[i]?.historyVoucherTopup?.gameName %>
                <br>
                <%= transaksis[i]?.historyVoucherTopup?.category %>
            </td>
            <td>
                <%= transaksis[i]?.historyVoucherTopup?.coinQuantity %>
                <%= transaksis[i]?.historyVoucherTopup?.coinName %>
            </td>
            <td>
                <%= transaksis[i].value %>
            </td>
            <td>
                <% if(transaksis[i].status === 'pending'){ %>
                    <span class="badge badge-warning">
                        <%= transaksis[i].status %>
                    </span>
                <% }else if(transaksis[i].status === 'success'){ %>
                    <span class="badge badge-success">
                        <%= transaksis[i].status %>
                    </span>
                <% }else{ %>
                    <span class="badge badge-danger">
                        <%= transaksis[i].status %>
                    </span>
                <% } %>
            </td>
            <td>
                <%= transaksis[i]?.player?.name ?? '-' %>
            </td>
            <td>
                <% if(transaksis[i].status === 'pending'){ %>
                <form action="/transaksi/status/<%= transaksis[i]._id %>?status=failed&_method=PUT" method="POST" style="display: inline-block;">
                    <button class="btn btn-danger btn-sm">
                        <i class="fas fa-times-circle"></i> 
                        Tolak
                    </button>
                </form>
                <form action="/transaksi/status/<%= transaksis[i]._id %>?status=success&_method=PUT" method="POST" style="display: inline-block;">
                    <button class="btn btn-info btn-sm">
                        <i class="fas fa-check"></i> 
                        Terima
                    </button>
                </form>
                <% }else if(transaksis[i].status === 'success'){ %>
                    <form action="/transaksi/status/<%= transaksis[i]._id %>?status=failed&_method=PUT" method="POST" style="display: inline-block;">
                        <button class="btn btn-danger btn-sm">
                            <i class="fas fa-times-circle"></i> 
                            Tolak
                        </button>
                    </form>
                <% }else{ %>
                    <form action="/transaksi/status/<%= transaksis[i]._id %>?status=success&_method=PUT" method="POST" style="display: inline-block;">
                        <button class="btn btn-info btn-sm">
                            <i class="fas fa-check"></i> 
                            Terima
                        </button>
                    </form>
                <% } %>
            </td>
        </tr>
        <% } %>
    </tbody>
    <tfoot>
        <tr>
            <th>No.</th>
            <th>Nama Game</th>
            <th>Item</th>
            <th>Total Harga</th>
            <th>Status</th>
            <th>Nama Player</th>
            <th>Aksi</th>
        </tr>
    </tfoot>
</table>