<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Type</th>
            <th>Bank</th>
            <th>Status</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0;i < payments.length;i++){ %>
        <tr>
            <td><%= i+1 %></td>
            <td><%= payments[i].type %></td>
            <td>
                <% payments[i].banks.forEach(bank => { %>
                    <span class="badge badge-warning">
                        <%= bank.name %> - <%= bank.nameBank %> - <%= bank.noRekening %>
                    </span>
                <% }) %>
            </td>
            <td>
                <% if(payments[i].status == 'Y'){ %>
                <span class="badge badge-success">
                    Aktif
                </span>
                <% }else{ %>
                <span class="badge badge-danger">
                    Tidak Aktif
                </span>
                <% } %>
            </td>
            <td>
                <form action="/payment/status/<%= payments[i]._id %>?_method=PUT" method="POST" style="display: inline-block;">
                    <button class="btn btn-primary btn-sm">
                        <!-- <i class="fa fa-"></i> -->
                        <% if(payments[i].status == 'Y'){ %>
                            Matikan
                        <% }else{ %>
                            Hidupkan
                        <% } %>
                    </button>
                </form>
                <form action="/payment/destroy/<%= payments[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">
                    <a href="/payment/edit/<%= payments[i]._id %>" class="btn btn-warning btn-sm"><i class="fas fa-pencil-alt"></i> Ubah</a>
                    <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Hapus</button>
                </form>
            </td>
        </tr>
        <% } %>
    </tbody>
    <tfoot>
        <tr>
            <th>No.</th>
            <th>Type</th>
            <th>Bank</th>
            <th>Status</th>
            <th>Aksi</th>
        </tr>
    </tfoot>
</table>